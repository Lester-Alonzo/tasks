generator client {
  provider = "prisma-client-js"
}

// datasource db {
//   provider = "postgresql"
//   url      = env("DATABASE_URL")
// }
datasource db {
  provider = "sqlite"
  url      = "file:../src/db/dev.db"
}

model ToDo {
  id    Int     @id @default(autoincrement())
  title String
  stage String  @default("TODO")
  Tasks Tasks[]
}

model Tasks {
  id     Int     @id @default(autoincrement())
  parent ToDo    @relation(fields: [todoId], references: [id], onDelete: Cascade)
  todoId Int
  title  String
  type   String  @default("NORMAL")
  time   String?
  Doc    Doc[]
  Days   Days[]
}

model Doc {
  id      Int    @id @default(autoincrement())
  task    Tasks  @relation(fields: [taskId], references: [id], onDelete: Cascade)
  taskId  Int
  content String
  type  String @default("text")
}

model Days {
  id      Int    @id @default(autoincrement())
  date    Int
  taskID Int
  task    Tasks  @relation(fields: [taskID], references: [id], onDelete: Cascade)
}

model Coins {
  id      Int    @id @default(autoincrement())
  coin    Int @default(0)
}
model Rewards {
  id      Int    @id @default(autoincrement())
  price   Int
  title   String
  content String
  type    String @default("NORMAL")
  time    String?
}